---
extends: default

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy:
    check-keys: false

ignore: |
  .tox/
  .cache/
